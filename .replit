modules = ["web", "nodejs-20"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true
integrations = ["firebase_barebones_javascript:1.0.0", "javascript_paypal:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Server"

[[workflows.workflow]]
name = "Frontend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx http-server . -p 5000 -a 0.0.0.0 --cors -c-1"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38503
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "http-server", ".", "-p", "5000", "-a", "0.0.0.0", "--cors", "-c-1"]
